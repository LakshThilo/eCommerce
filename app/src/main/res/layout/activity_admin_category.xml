<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:text="Add New Product"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/slogan_category"
        android:layout_marginTop="65dp">

        <ImageView
            android:id="@+id/t_shirt"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/tshirts" />
        <ImageView
            android:id="@+id/sport_t_shirt"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/sports" />
        <ImageView
            android:id="@+id/female_dress"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/female_dresses" />
        <ImageView
            android:id="@+id/sweaters"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/sweather" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_category_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linear_category_layout"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/glass"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/glasses" />
        <ImageView
            android:id="@+id/purse_bags_wallets"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/purses_bags" />
        <ImageView
            android:id="@+id/hats_caps"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/hats" />
        <ImageView
            android:id="@+id/shoes"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/shoess" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_category_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/linear_category_layout1"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/headphone_handfree"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/headphoness" />
        <ImageView
            android:id="@+id/laptops_tablets"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/laptops" />
        <ImageView
            android:id="@+id/watches"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/watches" />
        <ImageView
            android:id="@+id/mobilePhones"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/mobiles" />

    </LinearLayout>

</RelativeLayout>